{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es6",
        "lib": ["es6", "dom"],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "jest",
        "**/*.js",
        "**/*.jsx"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ],
    "files": [
        "./build/types/less.d.ts"
    ]
}
